{
  "name": "Scrollback",
  "version": "1.0.0",
  "description": "Where communities hang out.",
  "author": "Askabt (info@askabt.in)",
  "homepage": "http://scrollback.io",
  "keywords": [
    "scrollback"
  ],
  "repository": {
    "type": "git",
    "path": "git://github.com/scrollback/scrollback.git"
  },
  "bugs": "https://github.com/scrollback/scrollback/issues",
  "private": true,
  "license": "AGPL",
  "main": "./index.js",
  "scripts": {
    "start": "node index",
    "test": "./node_modules/.bin/mocha test/test.js",
    "fonts": "cp ./node_modules/lace/src/fonts/* ./public/s/dist/fonts/",
    "bundle": "./node_modules/webpack/bin/webpack.js --config webpack.config.js && ./node_modules/webpack/bin/webpack.js --config webpack-widget-v1.config.js && ./node_modules/webpack/bin/webpack.js --config webpack-widget-v2.config.js",
    "clean": "find ./public -name '*.min.js' -o -name '*.min.css' -o -name '*.map' -o -name '*.appcache' | xargs rm",
    "build": "npm run clean && npm run fonts && npm run bundle",
    "postinstall": "ln -sf ../../.git-hooks/pre-commit .git/hooks/pre-commit"
  },
  "engines": {
    "node": ">=0.8"
  },
  "dependencies": {
    "big-integer": "latest",
    "ebus": "latest",
    "endless": "github:scrollback/endless#v0.9.2",
    "engine.io": "^1.5.4",
    "engine.io-client": "^1.5.4",
    "express": "3.x",
    "handlebars": "latest",
    "htmlencode": "latest",
    "irc": "git://github.com/scrollback/node-irc.git",
    "jade": "0.x",
    "jquery": "^2.1.4",
    "jsonwebtoken": "latest",
    "juri": "latest",
    "lace": "github:scrollback/lace#v0.1.20",
    "markdown-it": "latest",
    "markdown-it-emoji": "latest",
    "newrelic": "latest",
    "nodemailer": "v0.7.1",
    "oauth": "latest",
    "pg": "latest",
    "pigment": "latest",
    "react": "^0.13",
    "redis": "latest",
    "request": "latest",
    "twemoji": "latest",
    "twit": "latest",
    "underscore": "latest",
    "valid": "git://github.com/scrollback/valid.git",
    "winston": "latest"
  },
  "devDependencies": {
    "babel-core": "^6.1.21",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-polyfill": "^6.1.19",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-react": "^3.11.3",
    "json-loader": "^0.5.4",
    "mocha": "^2.3.4",
    "react-hot-loader": "^1.3.0",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  }
}
