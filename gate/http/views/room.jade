extends layout

block styles
	style.
		.scrollback-embed { display:none; }
		#intro { width: 400px; position: absolute; left: 0px; }
block content
		#intro
			p Watch all the stream you care about.
			label Add another stream
				form#submit
					input
	
block scripts
	script.
		window.scrollback = {
		streams:!{streams},
			theme: 'light',
			ticker: true,
			close: true,
			minimized: false,
			maxWidth: 600,
			maxHeight: 9999
		};
		// Don't change below this line ------------------------------------------------
		(function(d,h,e){e=d.createElement('script');e.async=1;e.src=h+'/client.min.js';
		scrollback.host=h;d.body.appendChild(e);}(document,'http://'+location.host));
