html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
		title Scrollback: beautiful text chat for open communities.
		meta(name="description",content="Scrollback: beautiful text chat for open communities, embeddable on any website.")
		meta(name="viewport",content="width=device-width")
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet',type='text/css')
		link(rel="stylesheet",href="/style.css")
		style
			#navbar {background-color: #000; height: 80px;}
			.logo {padding-left:10px; padding-top:5px;}
			.link {color: #fff; text-decoration:none; float:right; padding-top:30px; padding-right:10px;}
			.link:hover {color: #ccc;}
		meta(http-equiv="X-UA-Compatible",content="IE=Edge")
	body
		div#navbar
			img(src="/img/logo_inv.png", class="logo")
			<a href="#" class="link">Help</a>
		script
			window.scrollback = {
				streams:!{streams},
				theme: 'light',
				ticker: true,
				minimized: true,
				maxWidth: 600
			};
			// Don't change below this line ------------------------------------------------
			(function(d,h,e){e=d.createElement('script');e.async=1;e.src=h+'/client.min.js';
			scrollback.host=h;d.body.appendChild(e);}(document,'http://'+location.host));


