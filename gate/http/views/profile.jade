extends layout
block append styles
	link(rel="stylesheet", href="/css/login.css")

block append scripts

	script(type='text/javascript')
		window.scrollback = {host: 'http://' + location.host};
	script(src="/socket.io/socket.io.js")
	script(src="/sdk/emitter.js")
	script(src="/sdk/client.js")
	script(src="/sdk/profile.js")
	

	div#loading
		h1 Please Wait
		
	div#logged(class="hidden")
		form#profile
			center
				div#pictureFrame(title="Click to change")
					img#picture
				br
				label
						span.label Username:
						input#username
				br
				label
					span.label Nick:
					input#nickname
				br
				p.
					Your Email ID will never be shared with anyone. The
					username, Nick and picture will be public.
				button#submit(type="button",onclick="update()") Create account
	div#error(class="hidden")
		h1	error