html
	body			
		table(bgcolor="#000000" height="30px" width="100%")
			td
				img(src="http://scrollback.io/favicon.ico",style="vertical-align: middle;")
				span(style="color: #fff; font-weight:800;vertical-align: middle;" ) Scroll
				span(style="color: #fff;vertical-align: middle;") back
		table(bgcolor="#3CA" height="3px" width="100%")			
			td
		h1 hi #{user}
		
		p	Your summary for the day.
		table(border = "1",style="border-collapse: collapse;")
			each r in room
				tr
				if roomsData[r]
					a(href="http://scrollback.io/#{r}") #{r}
					div.msglist
						each msg in roomsData[r].head
							div.msg
								span [#{msg.from.replace(/^guest-/,"")}] #{msg.text}
					if(roomsData[r].count > 6)
						div
							a(href="http://scrollback.io/#{r}/since/#{new Date(roomsData[r].head[0].time-1).toISOString()}") #{roomsData[r].count} messages where sent in the room today.
					if(roomsData[r].tail)
						div.msglist
							each msg in roomsData[r].tail
								div.msg
									span [#{msg.from.replace(/^guest-/,"")}] #{msg.text}
				else
					span
						a(href="http://scrollback.io/#{r}") #{r}
						span  is waiting for you....
		p	- Scrollback
		
		table(bgcolor="#000000" height="30px" width="100%")
			td
				img(src="http://scrollback.io/favicon.ico",style="vertical-align: middle;")
				span(style="color: #fff; font-weight:800;vertical-align: middle;" ) Scroll
				span(style="color: #fff;vertical-align: middle;") back
		table(bgcolor="#3CA" height="3px" width="100%")			
			td			
		